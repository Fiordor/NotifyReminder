<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fio.fiordor.notifyreminder">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NotifyReminder">
        <activity android:name=".CreateActivity"
            android:parentActivityName=".ListActivity"/>
        <activity android:name=".ListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".customnotify.NotifyShow" android:enabled="true" android:exported="true" />
        <receiver android:name=".customnotify.NotifyReply" android:enabled="true" android:exported="true" />
    </application>

</manifest>